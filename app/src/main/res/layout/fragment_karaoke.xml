<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/karaoke_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/darkGray"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/karaoke_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/karaoke__tool_bar_search_icon"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <EditText
            android:id="@+id/karaoke_search_text_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:hint="請輸入歌手或歌名"
            android:textColorHint="@color/darkGray2"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/karaoke_search_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/karaoke_setting_btn"
            />
        <ImageButton
            android:id="@+id/karaoke_setting_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/clear"
            android:src="@drawable/karaoke_setting"
            android:scaleType="fitCenter"
            android:layout_margin="16dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/karaoke_subview_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/karaoke_tool_bar"
        android:orientation="horizontal"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/karaoke_bookmark_background"
            android:focusable="true"
            android:clickable="true"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/karaoke_bookmark_icon"
                android:scaleType="fitCenter"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textView1"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="24sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="最愛歌本"

                app:layout_constraintBottom_toBottomOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/karaoke_search_background"
            android:clickable="true"
            android:layout_weight="1"
            android:orientation="vertical"
            android:focusable="true">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="4dp"
                android:src="@drawable/karaoke_search_icon"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textView2"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="24sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="找歌趣"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/karaoke_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/karaoke_subview_container"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/karaoke_empty_message_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/karaoke_subview_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        />

</android.support.constraint.ConstraintLayout>

