<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/media_share_expand_arrow_icon"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/media_share_expand_arrow_icon"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/media_share_expand_arrow_icon"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/media_share_music_player_panel_album_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_margin="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/media_share_default_album_icon"
            />
        <SeekBar
            android:id="@+id/media_share_music_player_panel_media_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:thumbTint="@color/black"
            android:progressTint="@color/black"
            />
        <TextView
            android:id="@+id/media_share_music_player_panel_item_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="TITLE"
            />
        <TextView
            android:id="@+id/media_share_music_player_panel_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="SUBTITLE"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            >
            <ImageButton
                android:id="@+id/media_share_music_player_panel_fast_backward_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/clear"
                android:src="@drawable/media_share_fast_backward_icon"/>
            <ImageButton
                android:id="@+id/media_share_music_player_panel_playback_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/clear"
                android:layout_weight="1"
                android:src="@drawable/media_share_play_icon"/>
            <ImageButton
                android:id="@+id/media_share_music_player_panel_fast_forward_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/clear"
                android:layout_weight="1"
                android:src="@drawable/media_share_fast_forward_icon"/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/media_share_music_player_panel_volume_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:thumbTint="@color/lightGray2"
            android:progressTint="@color/black"
            />
        <ImageButton
            android:id="@+id/media_share_music_player_panel_cast_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/clear"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/media_share_cast_red_icon"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightGray"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <FrameLayout
        android:id="@+id/media_share_list_dmr_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </FrameLayout>
</android.support.constraint.ConstraintLayout>