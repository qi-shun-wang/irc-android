<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ising99.intelligentremotecontrol.modules.IRC.panel.MediaPanelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/spaceGray">

        <LinearLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/irc_media_panel_terminate_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="切歌"
                android:background="@drawable/purple_round_corner"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/irc_media_panel_mute_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="靜音"
                android:background="@drawable/purple_round_corner"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/irc_media_panel_insert_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="插歌"
                android:background="@drawable/purple_round_corner"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/irc_media_panel_tuning_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="調音"
                android:background="@drawable/purple_round_corner"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/irc_media_panel_player_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="播控"
                android:background="@drawable/purple_round_corner"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/irc_media_panel_vocal_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="男/女"
                android:background="@drawable/purple_round_corner"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/irc_media_panel_record_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="錄唱"
                android:background="@drawable/red_round_corner"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/irc_media_panel_close_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:background="@color/clear"
                    android:src="@drawable/irc_panel_up_icon"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/irc_media_panel_review_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/orange_round_coner"
                android:text="欣賞"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
