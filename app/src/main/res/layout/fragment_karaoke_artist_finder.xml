<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/karaoke_artist_types_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/karaoke_artist_type_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="男歌星"
                android:textSize="18sp"
                android:background="@drawable/karaoke_type_unselected_icon"
                />
            <Button
                android:id="@+id/karaoke_artist_type_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="女歌星"
                android:textSize="18sp"
                android:background="@drawable/karaoke_type_unselected_icon"
                />
            <Button
                android:id="@+id/karaoke_artist_type_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="團體"
                android:textSize="18sp"
                android:background="@drawable/karaoke_type_unselected_icon"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/karaoke_artist_type_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="男/女"
                android:textSize="18sp"
                android:background="@drawable/karaoke_type_unselected_icon"
                />
            <Button
                android:id="@+id/karaoke_artist_type_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="男/男"
                android:textSize="18sp"
                android:background="@drawable/karaoke_type_unselected_icon"
                />
            <Button
                android:id="@+id/karaoke_artist_type_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="女/女"
                android:textSize="18sp"
                android:background="@drawable/karaoke_type_unselected_icon"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/karaoke_artist_areas_list_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/karaoke_artist_types_container"
        >

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/karaoke_artist_artists_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/lightGray2"
        app:layout_constraintTop_toBottomOf="@+id/karaoke_artist_areas_list_view"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>

