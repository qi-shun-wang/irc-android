<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    >
    <TextView
        android:id="@+id/karaoke_artist_area_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="18sp"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:textAlignment="center"
        />
    <View
        android:id="@+id/karaoke_artist_area_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/yellow"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/karaoke_artist_area_title"
        app:layout_constraintLeft_toLeftOf="@id/karaoke_artist_area_title"
        app:layout_constraintRight_toRightOf="@id/karaoke_artist_area_title"

        />
</android.support.constraint.ConstraintLayout>