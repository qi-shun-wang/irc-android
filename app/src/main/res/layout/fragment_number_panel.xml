<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ising99.intelligentremotecontrol.modules.IRC.panel.NumberPanelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/spaceGray">

        <LinearLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num1_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                android:text="1"
                
                android:textAlignment="center"
                android:textSize="24sp" />

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num2_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                
                android:text="2"
                android:textSize="24sp" />

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num3_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                
                android:text="3"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num4_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                
                android:text="4"
                android:textSize="24sp" />

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num5_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                
                android:text="5"
                android:textSize="24sp" />

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num6_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                
                android:text="6"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num7_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                
                android:text="7"
                android:textSize="24sp" />

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num8_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                
                android:text="8"
                android:textSize="24sp" />

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num9_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                android:text="9"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/irc_number_panel_del_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                android:text="刪除"
                android:textColor="@color/red"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/irc_number_panel_close_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:background="@color/clear"
                    android:src="@drawable/irc_panel_up_icon"
                    />
            </RelativeLayout>

            <com.ising99.intelligentremotecontrol.component.NumberButton
                android:id="@+id/irc_number_panel_num0_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                
                android:text="0"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/irc_number_panel_outside_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
