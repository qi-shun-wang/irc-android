<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@+id/karaoke_list_item_type_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        >
        <TextView
            android:id="@+id/karaoke_list_item_title_text"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Title"
            />
        <TextView
            android:id="@+id/karaoke_list_item_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="SubTitle"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/karaoke_list_item_type_text"
        android:background="@drawable/background_red_round"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="18sp"
        android:layout_margin="4dp"
        android:text="Type"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintDimensionRatio="H,1:1.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>