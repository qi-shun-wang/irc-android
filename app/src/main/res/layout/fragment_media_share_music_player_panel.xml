<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/media_share_music_player_panel_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView
        android:id="@+id/media_share_music_player_panel_warning_text"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@color/blue"
        android:alpha="0"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/media_share_music_player_panel_recycler_view"
        />
    <FrameLayout
        android:id="@+id/media_share_list_dmr_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</android.support.constraint.ConstraintLayout>